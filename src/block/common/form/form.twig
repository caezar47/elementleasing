{% if view=="leasing_order" %}
	<form action="#" class="{{prefix}}panel  {{mod}}  {{group}}"  {{form_data}}>
		<div class="{{prefix}}wrap  {{mod}}  {{group}}">
			{% include "../../common/page-header/tpl.twig" with {
				heading_view:heading_view, 
				prefix:"page-header__", 
				mod:heading_mod, 
				group:heading_group, 
				level:heading_level, 
				heading:heading} %}
			<ol class="{{prefix}}step  {{mod}}">
				<li class="{{prefix}}step-item  {{mod}}">
					<a href="#{{ID}}-step1" class="{{prefix}}step-link  {{mod}}  is--active">Основная информация</a> 	
				</li>
				<li class="{{prefix}}step-item  {{mod}}">
					<a href="#{{ID}}-step2" disabled class="{{prefix}}step-link  {{mod}}  {{active_two}}">Данные компании</a> 	
				</li>
				<li class="{{prefix}}step-item  {{mod}}">
					<a href="#{{ID}}-step3" disabled class="{{prefix}}step-link  {{mod}}  {{active_three}}">Ваши контакты</a> 	
				</li>
			</ol>
			<div class="{{prefix}}step-pane  {{mod}}  {{active_one}}" id="{{ID}}-step1">			
				<div class="{{prefix}}row  grid__row  {{mod}}">				
					{% include "elem-tpl.twig" with {view: "input", prefix:prefix, mod:mod, color:color, list: [
						{
							"type":"text", 
							"id":"item", 
							"form_id":ID,
							"required": "required",
							"name":"Объект лизинга", 
							"placeholder":"Объект лизинга"
						},
					]} %}
					{% include "elem-tpl.twig" with {
						view: "select", 
						prefix:prefix, 
						mod:mod, 
						form_id:ID,
						id:"time", 
						name:"Срок лизинга", 
						color:color, 
						required: "required",
						attr:"data-select-primary-l", 
						list: [
							{"name": "Срок лизинга", "status":"disabled selected"},
							{"name": "36 месяцев"},
							{"name": "24 месяца"},
							{"name": "12 месяцев"}
						]
					} %}	
					{% include "elem-tpl.twig" with {view: "input", prefix:prefix, mod:mod, color:color, list: [
						{
							"type":"number", 
							"id":"payment", 
							"form_id":ID, 
							"required": "required",
							"name":"Размер аванса в рублях", 
							"placeholder":"Размер аванса в рублях"
						}
					]} %}
					<button type="button" class="btn__item  is--arrow  is--md  is--primary" data-step-next>Продолжить</button>	
				</div>
			</div>
			<div class="{{prefix}}step-pane  {{mod}}  {{active_two}}" id="{{ID}}-step2">			
				<div class="{{prefix}}row  grid__row  {{mod}}">				
					{% include "elem-tpl.twig" with {view: "input", prefix:prefix, mod:mod, color:color, list: [
						{
							"type":"text", 
							"id":"fio", 
							"form_id":ID,
							"required": "required", 
							"name":"ФИО", 
							"placeholder":"ФИО"
						},
						{
							"type":"text", 
							"id":"company", 
							"form_id":ID, 
							"required": "required", 
							"name":"Название компании", 
							"placeholder":"Название компании"
						}
					]} %} 
					{% include "elem-tpl.twig" with {
						view: "select", 
						prefix:prefix, 
						mod:mod, 
						form_id:ID,
						id:"legal", 
						name:"", 
						color:color, 
						required: "required", 
						attr:"data-select-primary-l",
						list: [
							{"name": "Правовая форма", "status":"disabled selected"},
							{"name": "Юридическое лицо"},
							{"name": "ИП"},
							{"name": "Физическое лицо"}
						]
					} %}
					<button type="button" class="btn__item  is--arrow  is--md  is--primary" data-step-next>Продолжить</button>	
				</div>
			</div>
			<div class="{{prefix}}step-pane  {{mod}}  {{active_three}}" id="{{ID}}-step3">		
				<div class="{{prefix}}row  grid__row  {{mod}}">				
					{% include "elem-tpl.twig" with {view: "input", prefix:prefix, mod:mod, color:color, list: [
						{
							"type":"email", 
							"id":"email", 
							"form_id":ID, 
							"required": "required", 
							"name":"E-mail", 
							"placeholder":"Ваш E-mail"
						},
						{
							"type":"tel", 
							"id":"tel",
							"form_id":ID, 
							"required": "required", 
							"name":"Телефон", 
							"placeholder":"Ваш телефон"
						}
					]} %} 
					{% include "elem-tpl.twig" with {
						view: "select", 
						prefix:prefix, 
						mod:mod, 
						form_id:ID,
						required: "required", 
						id:"city", 
						name:"", 
						color:color, 
						attr:"data-select-primary-l", 
						list: [
							{"name": "Ваш город", "status":"disabled selected"},
							{"name": "Абакан"},
							{"name": "Архангельск"},
							{"name": "Астрахань"},
							{"name": "Барнаул"},
							{"name": "Белгород"},
							{"name": "Благовещенск"},
							{"name": "Брянск"}
						]
					} %}
					<button type="button" data-step-finish class="btn__item  is--arrow  is--md  is--primary">Отправить заявку</button>	
					{% include "elem-tpl.twig" with {
						view:"checkbox", 
						prefix:prefix, 
						mod:"is--sm  is--agreement", 
						color:"is--success", 
						list: [{"id":"agreement", "form_id":ID, "status":"checked", "name":"Согласие с условиями передачи информации", "label":"Соглашаюсь с условиями передачи информации"}] } %}
				</div>
			</div>
		</div>
		<div class="{{prefix}}result  {{mod}}  {{group}}">
			{% include "../../common/page-header/tpl.twig" with {
				heading_view:heading_view, 
				prefix:"page-header__", 
				mod:heading_r_mod, 
				group:heading_r_group, 
				level:heading_r_level, 
				heading:heading_r} %}
			{% include "../../common/page-header/tpl.twig" with {
				heading_view:heading_view, 
				prefix:"page-header__", 
				mod:heading_r_sm_mod, 
				group:heading_r_sm_group, 
				level:heading_r_sm_level, 
				heading:heading_r_sm} 
			%}
			<div class="{{prefix}}bg  {{mod}}"><img src="{{path.img}}/default/train-success.svg" alt=""></div>
		</div>
	</form>
{% endif %}

