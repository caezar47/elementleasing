{% if view=="login" %}
	<form action="#" class="{{prefix}}panel  {{mod}}">
		{% include "../../common/page-header/tpl.twig" with {heading_view:heading_view, prefix:"page-header__", mod:heading_mod, group:heading_group, level:heading_level, heading:heading} %}
		<ul class="{{prefix}}tabs  {{mod}}">
			<li class="{{prefix}}tabs-item  {{mod}} active">
				<a class="{{prefix}}tabs-link  {{mod}}" href="#login-clients" data-toggle="tab">Клиенту</a>
			</li> 
			<li class="{{prefix}}tabs-item  {{mod}}"><a class="{{prefix}}tabs-link  {{mod}}"  href="#login-partners" data-toggle="tab">Партнеру</a></li>
		</ul>
		{% include "elem-tpl.twig" with {view: "input", prefix:prefix, mod:mod, color:color, list: [
			{"type":"text", "id":"email", "form_id":ID, "name":"Email", "placeholder":"E-mail"},
			{"type":"password", "id":"passoword", "form_id":ID, "name":"Пароль", "placeholder":"Пароль"}
		]} %}
		<div class="{{prefix}}text  {{mod}}"><a href="#">Забыли пароль?</a></div>
		<div class="{{prefix}}btn  {{mod}}  tabs__pane  active" id="login-clients">
			<button type="submit" class="btn__item  is--success  is--arrow  is--md">Войти в кабинет</button>
			<a href="#" class="btn__item  is--black-29  is--arrow  is--md">Регистрация</a>
		</div>
		<div class="{{prefix}}btn  {{mod}}  tabs__pane" id="login-partners">
			<button type="submit" class="btn__item  is--success  is--arrow  is--md">Войти в кабинет</button>
		</div>
	</form>
{% endif %}

