{% if view == "modal" %}
<button type="button" class="{{prefix}}item  {{mod}}" data-toggle="modal" data-target="#{{target}}">{{name}}</button>
{% endif %}

{% if view == "btn" %}
<button type="{{type}}" class="{{prefix}}item  {{mod}}" {{attr}} {% if heading_view == "modal" %}data-btn-heading{% endif %}>
	<span>{{name}}</span>
	{% if icon %}
	<span class="{{prefix}}icon  {{mod}}">{% include "../svg-sprite/svg.twig" with {icon:icon} %}</span>
	{% endif %}
</button>
{% endif %}

{% if view == "link" %}
<a href="{{link}}" class="{{prefix}}item  {{mod}}">{{name}}</a>  
{% endif %}