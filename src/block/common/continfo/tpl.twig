<div class="{{prefix}}block  {{mod}}">
	{% if title != null %}
	<div class="{{prefix}}header  {{mod}}">
		<p class="{{prefix}}heading  {{mod}}  {{title_mod}}">
			{{title}}
		</p>
		<p class="{{prefix}}link  {{mod}}"><a href="{{link}}">{{link_name}}</a></p>
	</div>
	{% endif %}
	{% for value in list %}
	<div class="{{prefix}}card  {{mod}}  {{value.mod}}"> 
		<{{value.tag}} {% if value.href != null %}href="{{value.target}}{{value.href}}"{% endif %} class="{{prefix}}item  {{mod}}">		
			<span class="{{prefix}}item-name  {{mod}}">{{value.name}}</span>
		</{{value.tag}}>
		{% if value.label != null %}
		<p class="{{prefix}}label  {{mod}}">{{value.label}}</p>
		{% endif %}
	</div>
	{% endfor %} 
</div>