<header class="{{content_prefix}}block">
	<div class="{{content_prefix}}slick" data-slider-slick="slick-header">
		<div class="{{content_prefix}}slick-item">
			<img src="{{path.img}}/temp/header-slider-item1.jpg" class="img-responsive" alt="">
		</div>
		<div class="{{content_prefix}}slick-item">
			<img src="{{path.img}}/temp/header-slider-item2.jpg" class="img-responsive" alt="">
		</div>
	</div>
	<div class="{{content_prefix}}container container">
		<div class="{{content_prefix}}panel">
			<div class="{{content_prefix}}inner">
				<h1 class="{{content_prefix}}heading">{{heading}}</h1>
				<div class="{{content_prefix}}heading-small">{{heading_small}}</div>
				<div class="{{content_prefix}}btn">
					{% include "../button/btn.twig" with {view:"modal", prefix:"btn__", target:"modal-message", name:btn } %}
				</div>
			</div>
		</div>
	</div>
	<a href="#adv-block" data-scrollto-diff="-97" class="{{content_prefix}}scrollto scrollto">{% include "../svg-sprite/svg.twig" with {icon:"icon-scroll"} %}</a>
</header>