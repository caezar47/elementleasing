{% if view == "menedzhment" %}
	{% for value in list %}		
	<div class="{{prefix}}item  {{mod}}">
		<div class="{{prefix}}preview  {{mod}}">
			<img src="{{value.img}}" alt="{{value.heading}}" class="img-responsive">
		</div>
		<div class="{{prefix}}wrap  {{mod}}">
			<p class="{{prefix}}heading  {{mod}}">{{value.name}}</p>
			<p class="{{prefix}}heading  {{mod}}-post">{{value.post}}</p>
			<div class="{{prefix}}note  {{mod}}">{{value.note}}</div>
		</div> 
	</div> 
	{% endfor %}
{% endif %}

{% if view == "news" %}
	{% for value in list %}		
	<a href="{{value.link}}" class="{{prefix}}item  {{mod}}">
		<div class="{{prefix}}wrap  {{mod}}">
			<h4 class="{{prefix}}heading  {{mod}}">{{value.heading}}</h4>
			<div class="{{prefix}}note  {{mod}}">{{value.note}}</div>
			<time class="{{prefix}}date  {{mod}}" datetime="{{value.date_iso}}">{{value.date}}</time>
		</div>	
		<picture class="{{prefix}}preview  {{mod}}">
			<img src="{{value.img}}" alt="{{value.heading}}" class="img-responsive">
		</picture>
	</a>
	{% endfor %}
{% endif %}

{% if view == "news_sm" %}
	{% for value in list %}		
	<article class="{{prefix}}item  {{mod}}">
		<time class="{{prefix}}date  {{mod}}" datetime="{{value.date_iso}}">{{value.date}}</time>
		<h4 class="{{prefix}}heading  {{mod}}"><a href="{{value.link}}">{{value.heading}}</a></h4>
	</article>
	{% endfor %}
{% endif %}

{% if view == "news_card" %}
	<article class="{{prefix}}item  {{mod}}">
		{% if img != null %}
		<picture class="{{prefix}}preview  {{mod}}">
			<img src="{{img}}" alt="{{heading}}" class="img-responsive">
		</picture>
		{% endif %}
		<h2 class="{{prefix}}heading  {{mod}}  fw--700  margin--narrow">{{heading}}</h2>
		<time class="{{prefix}}date  {{mod}}" datetime="{{date_iso}}">{{date}}</time>
		<div class="{{prefix}}note  {{mod}}  text__block">{{note}}</div>
		<div class="link__group">
			<a href="#" class="link__item  is--prev">Предыдущая новость</a>
			<a href="#" class="link__item  is--next">Следующая новость</a>
		</div>
	</article>
{% endif %}

{% if view == "programm" %}
	{% for value in list %}
	<div>		
		<a href="{{link}}" class="{{prefix}}item  {{mod}}">
			<p class="{{prefix}}heading  {{mod}}">{{value.heading}}</p>
			<div class="{{prefix}}note  {{mod}}">{{value.note}}</div>
			<p class="{{prefix}}value  {{mod}}">
				Аванс 
				<span>{{value.value}}</span>
			</p>			
		</a>
	</div>
	{% endfor %}
{% endif %}

{% if view == "reviews" %}
	{% for value in list %}		
	<article class="{{prefix}}item  {{mod}}">
		<div class="{{prefix}}wrap  {{mod}}">
			<h4 class="{{prefix}}heading  {{mod}}" data-grid-heading>{{value.firm}}</h4>
			<time class="{{prefix}}date  {{mod}}" data-grid-date datetime="{{value.date_iso}}">{{value.date}}</time>
			<div class="{{prefix}}note  {{mod}}  text__block" data-grid-note>{{value.note}}</div>
			<div class="{{prefix}}sign  {{mod}}" data-grid-sign>
				<p>{{value.name}}</p>
				{% if value.city %}<p>{{value.city}}</p>{% endif %}
				{% if value.email %}<p>{{value.email}}</p>{% endif %}
			</div>
			{% if value.video %}
				<p class="{{prefix}}video  {{mod}}" data-grid-video>
					<a href="#">Смотреть видеоотзыв</a>
				</p>
			{% endif %}
		</div> 
	</article> 
	{% endfor %}
{% endif %}

{% if view == "articles" %}
	{% for value in list %}		
	<article class="{{prefix}}item  {{mod}}">
		<time class="{{prefix}}date  {{mod}}" datetime="{{value.date_iso}}">{{value.date}}</time>	
		<h4 class="{{prefix}}heading  {{mod}}"><a href="{{value.link}}">{{value.heading}}</a></h4>
		<div class="{{prefix}}note  {{mod}}">{{value.note}}</div>
	</article>
	{% endfor %}
{% endif %}

{% if view == "catalog" %}
	{% for value in list %}		
	<div class="{{prefix}}item  {{mod}}">
		<a href="{{value.link}}" class="{{prefix}}preview  {{mod}}" data-grid-preview>
			<img src="{{value.img}}" alt="{{value.heading}}" class="img-responsive">
		</a>
		<div class="{{prefix}}wrap  {{mod}}"  data-grid-wrap>
			<h5 class="{{prefix}}heading  {{mod}}"><a href="{{value.link}}">{{value.heading}}</a></h5>
			<p class="{{prefix}}value  {{mod}}  is--type">{{value.type}}</p>
			<p class="{{prefix}}value  {{mod}}">Цена: <span>от {{value.cost}} ₽</span></p>
			<p class="{{prefix}}value  {{mod}}">Лизинг: <span>{{value.leasing}} ₽/мес.</span></p>
			<p class="{{prefix}}value  {{mod}}">Срок: <span>{{value.time}}</span></p>
		</div>	
		<button type="button" class="{{prefix}}btn  {{mod}}"  data-grid-btn>Запрос на лизинг</button>
	</div>
	{% endfor %}
{% endif %}

{% if view == "catalog_new" %}
